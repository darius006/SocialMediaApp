@model SocialMediaApp.Models.Post

<h2 class="text-center mt-5">Adaugare postare</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form method="post" asp-action="New" asp-controller="Posts">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">

                    <label class="form-label">Continut postare</label>
                    <br />

                    <textarea class="form-control"></textarea>

                    <br /><br />
                </div>
                
                <br />
                <button class="btn btn-success" type="submit">Adauga postare</button>

            </form>
        </div>
    </div>
</div>


